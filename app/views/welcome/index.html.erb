<h1> My Pokédex </h1>

<div class='search-area'>
    <h3> Search Pokémon <h3>
    <%=form_tag '#', method: :get do %>
        <div class='form-group row'>
            <div class="col-sm-9">
                <%= text_field_tag :pokemon, params[:pokemon], placeholder: "Pokémon Name", autofocus: true, class: "form-control form-control lg" %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon "search 2x" %>
                <% end %>
            </div>
        </div>
    <% end %>

   <img src="<%= @pokemon.sprites.front_default %>">
    <%= @pokemon.inspect %>
</div>